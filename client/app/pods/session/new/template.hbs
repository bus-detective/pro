<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form {{action 'signIn' model on="submit"}}>
        <div class="form-group">
          <label for="session-email" class="control-label">Email</label>
          {{input value=model.email class="form-control qa-session-email" id="session-email"}}
        </div>

        <div class="form-group">
          <label for="session-password" class="control-label">Password</label>
          {{input value=model.password class="form-control qa-session-password" id="session-password"}}
        </div>

        <div class="actions">
          <button type="submit" class="btn qa-session-submit">Sign In</button>
        </div>
      </form>
    </div>
  </div>
</div>
