<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form {{action 'signIn' model on="submit"}}>
        <div class="card p-a m-t">
          <div class="form-group">
            <label for="session-email" class="control-label">Email</label>
            {{input value=model.email type="email" class="form-control qa-session-email" id="session-email"}}
          </div>

          <div class="form-group">
            <label for="session-password" class="control-label">Password</label>
            {{input value=model.password type="password" class="form-control qa-session-password" id="session-password"}}
          </div>
        </div>
        <div class="actions u-text-right">
          <button type="submit" class="btn qa-session-submit btn btn-primary">Sign In</button>
        </div>
      </form>
    </div>
  </div>
</div>
