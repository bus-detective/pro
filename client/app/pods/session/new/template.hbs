<form {{action 'signIn' model on="submit"}}>
  <div class="form-group">
    <label for="session-email">Email</label>
    {{input value=model.email class="qa-email-field" id="session-email"}}
  </div>

  <div class="form-group">
    <label for="session-password">Password</label>
    {{input value=model.password class="qa-password-field" id="session-password"}}
  </div>

  <div class="actions">
    <button type="submit" class="btn qa-submit">Sign In</button>
  </div>
</form>
