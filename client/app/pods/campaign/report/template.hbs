<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-header">Filters</div>
      <div class="card-block">
        <div class="form-group">
          <label>Start Date</label>
          {{input type="date" class="form-control" value=startDate}}
        </div>

        <div class="form-group">
          <label>End Date</label>
          {{input type="date" class="form-control" value=endDate}}
        </div>
        
        <div class="form-group">
          <label>Vehicles</label>
          <ul class="list-group">
            {{#each model.vehicleFilters as |vehicle|}}
              <li class="list-group-item">
                <label>{{input type="checkbox" checked=vehicle.isSelected}} {{vehicle.remoteId}}</label>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    {{outlet}}
  </div>
</div>
