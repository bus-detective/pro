<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-header">Filters</div>
      <div class="card-block">
        <form {{action "applyFilters" model on="submit"}}>
          <div class="form-group">
            <label>Start Date</label>
            {{input type="date" class="form-control" value=model.startDate}}
          </div>

          <div class="form-group">
            <label>End Date</label>
            {{input type="date" class="form-control" value=model.endDate}}
          </div>
          
          <div class="form-group">
            <label>Vehicles</label>
            <ul class="list-group">
              {{#each model.vehicles as |vehicle|}}
                <li class="list-group-item">
                  <label>{{input type="checkbox" checked=vehicle.isSelected}} {{vehicle.remoteId}}</label>
                </li>
              {{/each}}
            </ul>
          </div>

          <button class="btn btn-default btn-block">Filter</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    {{outlet}}
  </div>
</div>
