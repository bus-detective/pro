{{bd-map lat="39.15" lng="-84.516" zoom=11  vehiclePositions=model.selectedVehiclePositions shapes=model.zipCodes}}

<h1 class="display-2 m-t-lg">Demographics</h1>

<div class="row">
  <div class="col-xs-12 col-md-6 u-text-center">
    <h4 class="m-b-md">Income</h4>
    <div class="row">
      <div class="card col-md-6 col-md-offset-3 p-r p-b p-l">
        <h6 class="m-t u-text-muted">Median Income</h6>
        <hr>
        <h2 class="display-1 qa-median-income">{{bd-currency model.incomeMedian.value}}</h2>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-6">
    <h4 class="u-text-center m-b-md">Age</h4>
    <div class="row">
      <div class="col-md-6">
        {{bd-doughnut-chart data=model.ageDemographics}}
      </div>
      <ul class="list-unstyled col-md-5 col-md-offset-1 legend">
        {{#each model.ageDemographics as |datum|}}
          {{#bd-legend background=datum.color}}{{datum.name}}{{/bd-legend}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

