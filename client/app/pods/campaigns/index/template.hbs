<h1 class="display-2 m-t-md">Campaigns</h1>
<a {{action 'newCampaign'}} class="qa-create-campaign" href="#">Create a Campaign</a>
{{#each model as |c|}}
  <div class="card qa-campaign-{{c.id}}">
    <div class="card-block">
      <div class="row">
        <div class="col-md-8">
          <h4 class="">{{c.name}}</h4>
          <p class="small u-text-muted m-b-0">{{c.vehicles.length}} Vehicles</p>
        </div>
        <div class="col-md-4">
          {{#link-to 'campaign.report' c class="u-pull-right btn btn-secondary"}}Report{{/link-to}}
          <span class="qa-edit-campaign-{{c.id}}">
            {{#link-to 'campaigns.edit' c class="u-pull-right btn btn-primary"}}Edit{{/link-to}}
          </span>
          {{#unless c.vehicles}}
            <span class="qa-delete-campaign-{{c.id}}">
              <button class="u-pull-right btn btn-danger qa-delete" {{action 'delete' c}}>Delete</button>
            </span>
          {{/unless}}
        </div>
      </div>
    </div>
  </div>
{{/each}}
