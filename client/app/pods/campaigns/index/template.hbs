<div class="row m-t-md">
  <h1 class="display-2 col-md-9">Campaigns</h1>
  <div class="col-md-3">
    <a {{action 'newCampaign'}} class="qa-create-campaign btn btn-secondary btn-sm u-pull-right" href="#">New Campaign</a>
  </div>
</div>
{{#each model as |c|}}
  <div class="card qa-campaign-{{c.id}}">
    <div class="card-block">
      <div class="row">
        <div class="col-md-8">
          <h4 class="">{{c.name}}</h4>
          <p class="small u-text-muted m-b-0">{{c.vehicles.length}} Vehicles</p>
        </div>
        <div class="col-md-4">
          {{#link-to 'campaign.report' c class="u-pull-right btn btn-primary m-l"}}Report{{/link-to}}
          <span class="qa-edit-campaign-{{c.id}}">
            {{#link-to 'campaigns.edit' c class="u-pull-right btn btn-link btn-sm "}}Edit{{/link-to}}
          </span>
          <span class="qa-delete-campaign-{{c.id}}">
            <button class="u-pull-right btn btn-link btn-sm qa-delete" {{action 'delete' c}}>Delete</button>
          </span>
        </div>
      </div>
    </div>
  </div>
{{/each}}
