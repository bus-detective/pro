<div class="row">
  <div class="col-md-9">
    <form>
      <fieldset class="form-group">
        <label for="name">Campaign Name</label>
        {{input placeholder=" " value=model.name class="form-control qa-campaign-name" name="name"}}
      </fieldset>
      <fieldset class="form-group">
        <button class="btn btn-secondary qa-cancel" {{action 'cancel'}}>Cancel</button>
        <button class="btn btn-primary qa-save" {{action 'save'}}>Save</button>
      </fieldset>
    </form>
  </div>
</div>
