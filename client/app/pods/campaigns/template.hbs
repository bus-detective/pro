<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="display-2 m-t-md">Campaigns</h1>
      {{#each model as |c|}}
        <div class="card qa-campaign-{{c.id}}">
          <div class="card-block">
            <div class="row">
              <div class="col-md-9">
                <h4 class="">{{c.name}}</h4>
                <p class="small u-text-muted m-b-0">{{c.vehicles.length}} Vehicles</p>
                <p class="small u-text-muted m-b-0">{{c.product}}</p>
              </div>
              <div class="col-md-3">
                {{#link-to 'campaign.report' c class="u-pull-right btn btn-secondary"}}Report{{/link-to}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
